{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(employees, 'Full Name', 'e.full_name') }}</th>
            <th>{{ knp_pagination_sortable(employees, 'Position', 'e.position') }}</th>
            <th>{{ knp_pagination_sortable(employees, 'Salary', 'e.salary') }}</th>
            <th>{{ knp_pagination_sortable(employees, 'Boss', 'e.boss_id') }}</th>
        </tr>
        </thead>
        <tbody>
            {% for employee in employees %}
                <tr>
                    <td>{{ employee.fullName }}</td>
                    <td>{{ employee.position }}</td>
                    <td>{{ employee.salary }}</td>
                    <td>
                        <a href="{{ path('boss', {id: employee.bossId}) }}">
                            {{ employee.bossId }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation text-center">
        {{ knp_pagination_render(employees) }}
    </div>
{% endblock %}
